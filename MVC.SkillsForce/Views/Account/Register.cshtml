        <script type="text/javascript" src="
    https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <link rel="stylesheet" href="
    https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

        <script type="text/javascript">
        $(document).ready(function () {

            $('#emailHelpBlock').show();
            

            toastr.options.timeOut = 3000;
            function validateFieldOnBlur(field, regex) {
                var value = field.val();
                if (!regex.test(value)) {
                    field.addClass('is-invalid');
                    var fieldName = field.attr('id');
                    toastr.error("Invalid input for " + fieldName + ". Please check again.");
                } else {
                    field.removeClass('is-invalid');
                }
            }

            $('#MobileNumber').on('blur', function () {
                validateFieldOnBlur($(this), /^5[0-9]{7}$/);
                $('#mobileHelpBlock').show();
               
            });

            $('#NIC').on('blur', function () {
                validateFieldOnBlur($(this), /^[A-Za-z0-9]{14}$/);
                $('#nicHelpBlock').show();
            });

            $('#Email').on('blur', function () {
                // Using the specified email regex pattern
                validateFieldOnBlur($(this), /^[a-zA-Z0-9]{1,30}(?:[a-zA-Z0-9]*[.]?[a-zA-Z0-9]+)*@@gmail\.com$/);
                $('#emailHelpBlock').show();
            });

            //Regex for Password has been commented for demo and testing purposes

            //$('#Password').on('blur', function () {
            //    // Regular expression for password with minimum 8 characters, at least one uppercase letter, one lowercase letter, and one number
            //    validateFieldOnBlur($(this), /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,20}$/);
            //});

            function loadManagers() {

                $.ajax({
                    type: "GET",
                    url: "/Account/GetManagers",
                    dataType: "json",
                    success: function (response) {

                        var departmentDropdown = $("#manager");
                        departmentDropdown.empty();

                        departmentDropdown.append('<option value="" selected disabled>Select Manager</option>');

                        response.forEach(function (manager) {
                            var option = $("<option>")
                                .attr("value", manager.UserID)
                                .text(manager.FirstName + ' ' + manager.LastName);
                            departmentDropdown.append(option);
                        });
                    },
                    error: function (error) {
                        toastr.error('Failed to load managers. Please try again.');
                    }
                });
            }


            function loadDepartments() {

                $.ajax({
                    type: "GET",
                    url: "/Account/GetDepartments",
                    dataType: "json",
                    success: function (response) {

                        var departmentDropdown = $("#department");
                        departmentDropdown.empty();

                        departmentDropdown.append('<option value="" selected disabled>Select Department</option>');

                        response.forEach(function (department) {
                            var option = $("<option>")
                                .attr("value", department.DepartmentID)
                                .text(department.DepartmentName);
                            departmentDropdown.append(option);
                        });
                    },
                    error: function (error) {
                        toastr.error('Failed to load departments. Please try again.');
                    }
                });

            }

            loadDepartments();

            //console.log('here1');

            loadManagers();


            //console.log('heremanagers');

            $("#registrationForm").submit(function (event) {

                event.preventDefault();


                var password = $('#Password').val();
                var confirmPassword = $('#ConfirmPassword').val();

                if (!validateForm()) {
                    return;
                }

                if ($('#registrationForm .is-invalid').length > 0) {
                    $('#registrationForm .is-invalid').each(function () {
                        var fieldName = $(this).siblings('label').text().trim();
                        toastr.error("Invalid input for " + fieldName + ". Please check again.");

                        //$(this).siblings('.help-block').show();
                        
                    });
                    return;
                }


                    $('#Password, #ConfirmPassword').removeClass('is-valid is-invalid');

                    if (password === '') {
                        $('#Password').addClass('is-invalid');
                    }

                    if (confirmPassword === '') {
                        $('#ConfirmPassword').addClass('is-invalid');
                    }

                    if (password !== confirmPassword) {
                        $('#passwordMismatchError').text('Passwords do not match.');
                        $('#Password, #ConfirmPassword').addClass('is-invalid');
                        toastr.error("Passwords do not match.");
                        return;
                    } else {
                        $('#passwordMismatchError').text('');
                    }
                    var selectedDepartmentID = $(this).val();
                    var formData = {
                        FirstName: $('#FirstName').val(),
                        LastName: $('#LastName').val(),
                        Email: $('#Email').val(),
                        NIC: $('#NIC').val(),
                        MobileNumber: $('#MobileNumber').val(),
                        DepartmentID: parseInt($("#department").val()),
                        ManagerID: parseInt($("#manager").val()),
                        Password: password
                    };

                    console.log(formData);

                    $.ajax({
                        type: "POST",
                        url: "/Account/Register",
                        data: {
                            FirstName: $('#FirstName').val(),
                            LastName: $('#LastName').val(),
                            Email: $('#Email').val(),
                            NIC: $('#NIC').val(),
                            MobileNumber: $('#MobileNumber').val(),
                            DepartmentID: parseInt($("#department").val()),
                            ManagerID: parseInt($("#manager").val()),
                            Password: password
                        },
                        success: function (response) {
                            console.log( response);

                            if (response.url) {
                                //toastr.success("Registration succeeded. Redirecting to the relevant page...");
                                setTimeout(function () {
                                    window.location = response.url;
                                }, 1000);
                                $("#registrationSuccessDiv").show();
                            }
                            else {
                                console.log(response.errorMessage)
                                handleValidationErrors(response.errorMessage)
                            }
                            console.log('respone 2');
                        },
                        error: function (error) {
                            console.log('in error');
                            console.error("Error submitting form:", error);

                            //if (error.responseJSON && error.responseJSON.errors) {
                            //    //var errors = error.responseJSON.errors;
                            //    //handleValidationErrors(errors);
                            //    console.log('errors found');
                            //}
                        }
                    });
                //}
            });

            function handleValidationErrors(errors) {
                // Clear existing validation messages
                $('.is-invalid').removeClass('is-invalid');

                // Display validation errors in toastr and mark corresponding fields as invalid
                errors.forEach(function (error) {
                    toastr.error(error);
                    $('#' + error.field).addClass('is-invalid');
                    console.log(error.field)
                });
            }


            function validateForm() {
                var form = document.getElementById('registrationForm');
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                return true;
            }
        });


        </script>

