@{
    ViewBag.Title = "Home Page";
}

<style>
    .card {
        border-radius: 15px; 
        transition: transform 0.3s ease-in-out; 
    }

        .card:hover {
            transform: scale(1.05); 
        }

 
    .bg-primary {
        border-radius: 15px;
        overflow: hidden; 
        background: linear-gradient(131deg, rgba(9,91,134,1) 0%, rgba(93,184,218,1) 46%, rgba(34,114,215,1) 75%, rgba(22,157,217,1) 95%); /* Set your desired gradient colors */
    }
    }

       
        .bg-primary .card-body {
            padding: 2rem; 
        }

</style>
<main class="container-fluid mt-3">
    <section class="row">
        <div class="col-md-12">
            <div class="card bg-primary text-white p-2">
                <div class="card-body">
                    <h1 class="card-title display-4" id="title">SkillsForce</h1>
                    <p class="card-text lead">Empowering Your Workforce through Innovative Training Solutions</p>
                    <a href="https://asp.net" class="btn btn-light btn-lg">Learn more &raquo;</a>
                </div>
            </div>
        </div>
    </section>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title" id="gettingStartedTitle">Start Learning</h2>
                    <p class="card-text">
                        Start Learning Today
                    </p>
                    @if (Session["UserId"] != null)
                    {

                        <a class="btn btn-primary" href="@Url.Action("ViewTraining", "Enrollment", new { area = "" })">Enroll &raquo;</a>
                    }
                    else
                    {

                        <a class="btn btn-primary" href="@Url.Action("Index", "Account", new { area = "" })">Enroll &raquo;</a>
                    }
                </div>
            </div>
        </div>

        @if (Session["UserId"] != null)
        {
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title" id="librariesTitle"> Trainings</h2>
                        <p class="card-text">View your Selected Trainings</p>
                        <a class="btn btn-primary" href="@Url.Action("ViewTraining", "Enrollment", new { area = "" })">View &raquo;</a>
                    </div>
                </div>
            </div>

            if (Session["CurrentRole"].ToString() == "Employee")
            {
                <div class="col-md-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title" id="librariesTitle"> My Enrollments</h2>
                            <p class="card-text">View your  Enrollments</p>
                            <a class="btn btn-primary" href="@Url.Action("ViewEnrollmentsByUser", "Enrollment", new { area = "" })">View &raquo;</a>
                        </div>
                    </div>
                </div>

            }
        }



    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="display-4">Why Choose SkillsForce?</h2>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Comprehensive Training</h3>
                    <p class="card-text">Access a wide range of training modules tailored to your organization's needs.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">User-Friendly Interface</h3>
                    <p class="card-text">Our platform is designed with simplicity in mind, ensuring a smooth user experience.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Advanced Analytics</h3>
                    <p class="card-text">Gain insights into employee progress and optimize your training programs with powerful analytics.</p>
                </div>
            </div>
        </div>
    </div>
</main>

