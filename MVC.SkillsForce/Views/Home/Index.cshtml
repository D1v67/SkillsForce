@{
    ViewBag.Title = "Home Page";
}

<style>
    .card {
        border-radius: 15px; /* Adjust the border-radius value as needed */
        transition: transform 0.3s ease-in-out; /* Smooth transition effect on hover */
    }

        .card:hover {
            transform: scale(1.05); /* Scale the card on hover */
        }

    /* Additional styling for the primary card */
    .bg-primary {
        border-radius: 15px;
        overflow: hidden; /* Ensure the background color is rounded within the border-radius */
        background: linear-gradient(131deg, rgba(9,91,134,1) 0%, rgba(93,184,218,1) 46%, rgba(34,114,215,1) 75%, rgba(22,157,217,1) 95%); /* Set your desired gradient colors */
    }
    }

        /* Additional styling for the primary card text */
        .bg-primary .card-body {
            padding: 2rem; /* Add padding to the primary card text */
        }

</style>
<main class="container mt-3">
    <section class="row">
        <div class="col-md-12">
            <div class="card bg-primary text-white p-2">
                <div class="card-body">
                    <h1 class="card-title display-4" id="title">SkillsForce</h1>
                    <p class="card-text lead">Empowering Your Workforce through Innovative Training Solutions</p>
                    <a href="https://asp.net" class="btn btn-light btn-lg">Learn more &raquo;</a>
                </div>
            </div>
        </div>
    </section>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title" id="gettingStartedTitle">Getting Started</h2>
                    <p class="card-text">
                        Start Learning Today
                    </p>
                    @if (Session["UserId"] != null)
                    {
                        <!-- User is logged in, provide a link to the enrollment page -->
                        <a class="btn btn-outline-primary" href="@Url.Action("ViewTraining", "Enrollment", new { area = "" })">Enroll &raquo;</a>
                    }
                    else
                    {
                        <!-- User is not logged in, redirect to the login page -->
                        <a class="btn btn-outline-primary" href="@Url.Action("Index", "Account", new { area = "" })">Enroll &raquo;</a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title" id="librariesTitle">Get More Libraries</h2>
                    <p class="card-text">Discover a vast library of tools and .</p>
                    <a class="btn btn-outline-primary" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title" id="hostingTitle">Web Hosting</h2>
                    <p class="card-text">Find reliable and affordable web hosting .</p>
                    <a class="btn btn-outline-primary" href="https://go.microsoft.com/fwlink/?LinkId=301867">Try Now &raquo;</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2 class="display-4">Why Choose SkillsForce?</h2>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Comprehensive Training</h3>
                    <p class="card-text">Access a wide range of training modules tailored to your organization's needs.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">User-Friendly Interface</h3>
                    <p class="card-text">Our platform is designed with simplicity in mind, ensuring a smooth user experience.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title">Advanced Analytics</h3>
                    <p class="card-text">Gain insights into employee progress and optimize your training programs with powerful analytics.</p>
                </div>
            </div>
        </div>
    </div>
</main>

