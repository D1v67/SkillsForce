<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SkillsForce</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Navbar styling */
        /* Navbar styling */
        .navbar-nav .nav-link {
            color: #ffffff !important; /* Default text color */
            transition: color 0.3s ease; /* Smooth transition for text color */
            line-height: 30px; /* Adjust the line height to match the navbar height */
            padding: 10px 15px; /* Adjust padding to create space around the text */
        }
            .navbar-nav .nav-link:hover {
                /*color: #007bff !important;*/ /* Hover text color */
                background-color: #000080 !important; /* Hover background color */
                line-height: 30px;
            }

        /* Responsive navbar toggler styling */
        .navbar-toggler-icon {
            background-color: #ffffff !important; /* Toggler icon color */
        }

        .navbar {
            background-color: #0047AB !important; /* Navbar background color */
        }

        .gradient-background {
            background: linear-gradient(90deg, rgba(70,150,191,1) 0%, rgba(65,126,193,1) 50%, rgba(22,95,217,1) 100%, rgba(0,212,255,1) 100%); /* Set your desired gradient colors */
            padding: 20px; /* Adjust padding as needed */
            padding-left:300px;
            color: #fff; /* Set the text color for the gradient div */
            display: flex; /* Use flexbox for layout */
            justify-content: space-between; /* Space elements evenly within the div */
            align-items: center; /* Align items vertically at the center */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        /* Add styling for the greeting text */
        .greeting-text {
            margin: 0; /* Remove any default margin */
        }
        .overlay-container {
            position: relative;
            z-index: 1;
            min-height: 50px;
            padding:0px;
        }

            .overlay-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5); /* Adjust the alpha value for transparency */
                z-index: -1;
                
                border-radius: 15px;
            }
    </style>


</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <strong>@Html.ActionLink("SkillsForce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</strong>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (Session["CurrentRole"] != null && (Session["CurrentRole"].ToString() == "Admin" || Session["CurrentRole"].ToString() == "Manager"))
                    {
                        <!-- Only display "Enrollments" link for Admin and Manager roles -->
                        <li>@Html.ActionLink("Enrollments", "GetEnrollments", "Enrollment", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>

                <ul class="navbar-nav ml-auto">
                    <!-- This class moves the items to the right -->
                    @if (Session["UserId"] != null)
                    {
                        <!-- User is logged in, display additional menu items or logout link -->
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="ml-2"></li>
                        <li class="ml-2"></li>
                        <li class="ml-2"></li>
                        <svg class="mx-auto d-flex justify-content-center" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                        </svg>
                        <li class="nav-item no-hover">
                            <span class="nav-link">@Session["FirstName"]</span>
                        </li>
                    }
                    else
                    {
                        <!-- User is not logged in, display login/register links -->
                        <li>@Html.ActionLink("Login", "Index", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="gradient-background">
        <div class="overlay-container">
            @if (Session["FirstName"] != null)
            {
                <h1>Hello, @Session["FirstName"].</h1>
            }

            <!-- Display "Hello, User" on the left side -->
            <p class="greeting-text"></p>
            <!-- Add any additional content or text as needed on the right side -->
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SkillsForce</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
