        );
        saveButton.on('click', function () {
            saveEnrollment(trainingId);
        });
        container.append(saveButton);

        $('#enrollModal').find('.modal-content').addClass('rounded');
        $('#enrollModal').find('.modal-body').addClass('p-4');
    }



